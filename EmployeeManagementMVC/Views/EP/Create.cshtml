
@{
    ViewBag.Title = "Create";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/libs/jquery-ui-1.12.1.custom/jquery-ui.css" rel="stylesheet" />

    @*<link href="~/Views/personal/libs/jquery-ui-1.12.1.custom/jquery-ui.css"  rel="stylesheet"/>*@


    <link href="~/libs/pqGrid/pqgrid.min.css" rel="stylesheet" />
    @*<link href="~/Views/personal/libs/pqGrid/pqgrid.min.css" rel="stylesheet" />*@

    @*<link href="~/Views/personal/libs/pqGrid/pqgrid.ui.min.css" rel="stylesheet" />*@
    <link href="~/libs/pqGrid/pqgrid.ui.min.css" rel="stylesheet" />

    <link href="~/libs/pqGrid/themes/Office/pqgrid.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    <style>
        .forms {
            margin-top: 15px;
            margin-left: 20%;
            width: 70%;
            height: 87%;
            background-color: rgb(209, 210, 223);
            border-radius: 5%;
        }

        .header {
            width: 100%;
            height: 50px;
            background-color: rgb(0, 123, 255);
            text-align: center;
            font-size: 30px;
        }

        .master {
            margin-top: 5px;
            width: 100%;
            height: 150px;
        }

            .master:hover {
                border-style: solid;
            }

        #Grid {
            margin-top: 5px;
            width: 100%;
            height: 300px;
        }

        .details {
            margin-left: 10px;
            margin-top: 5px;
            width: 97%;
            height: 100px;
        }

        .buttons1 {
            text-align: center;
            height: 100px;
            margin-left: 70%;
        }
    </style>

</head>
<body>
    <div >
       
        <h2> @Html.ActionLink("view Report", "Index")</h2>
    </div>
    <div class="forms">


        <div id="myForm" data-bind="with: Masters">
            <div class="header">
               assign project
            </div>

            <div class="master">

                <div class="row">
                    <div class="col-sm-5">
                        <div class="form-group">
                            <label> Employee </label>
                           <select id="ddlEmployee" class=" form-control" data-bind="
                        value: EmployeeID,
                         options: $root.EmployeeList,
                        optionsValue: 'Value',
                        optionsText: 'Text',
                           optionsCaption: '---SELECT---'" >  </select>
                        </div>
                    </div>

                    <div class="col-sm-5">
                        <div class="form-group">
                            <label> Position </label>
                            <input type="text" class=" form-control" data-bind="value: Position" id="txtPosition" />
                        </div>
                    </div>

                   

                </div>

                
            </div>
        </div>


        <div class="details" data-bind="with: Details">

            <div id="Grid">
                grid view
            </div>

            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label> Project</label>
                        <select class=" form-control" data-bind="
                        value: ProjectID,
                         options: $root.ProjectList,
                        optionsValue: 'Value',
                        optionsText: 'Text',
                           optionsCaption: '---SELECT---'" id="ddlProject"></select>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="form-group">
                        <label> StartDate </label>
                        <input type="date" class=" form-control" data-bind="value: StartDate" id="txtStartDate" />
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="form-group">
                        <label> EndDate </label>
                        <input type="date" class=" form-control" data-bind="value: EndDate" id="txtEndDate" />
                    </div>
                </div>
                <div class="col-sm-1">
                    <br>
                    <div class="form-group">
                        <button class="btn btn-primary" data-bind="event: {click: $root.SaveInformation}" id="btnAddInformation"> add</button>
                    </div>
                </div>

            </div>

        </div>


        <div class="buttons1" style="margin-top: 290px;">
            <button class="btn btn-success" data-bind="event: {click: $root.Submit}" style="width: 170px;height:40px;">save</button>
        </div>
    </div>




    <br />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="~/libs/jquery/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="~/libs/jquery-ui-1.12.1.custom/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/libs/pqGrid/pqgrid.min.js" type="text/javascript"></script>
    <script src="~/js/knockout-3.3.0.js" type="text/javascript"></script>
    <script src="~/libs/pqGrid/localize/pq-localize-en.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/libs/pqGrid/knockout/ko.pqgrid.min.js"></script>
    <script src="~/Scripts/indexVM.js" type="text/javascript"></script>
</body>
</html>
